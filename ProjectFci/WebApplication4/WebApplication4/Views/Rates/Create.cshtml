@model WebApplication4.Models.Rate










<ol class="breadcrumb">
    <li style="text-align:right">الرئسية</li>
    <li style="text-align:right" class="active">التقديرات</li>
</ol>

<!-- Student Form -->
<div class="row">
    <div class="col-lg-8 col-lg-offset-1">
        <section class="widget">
            <header>

                <div class="widget-controls">

                    <a href="#" data-widgster="close"><i class="glyphicon glyphicon-remove"></i></a>
                </div>
            </header>
            <div class="widget-body" style="direction: rtl">


                @using (Html.BeginForm("Create", "Rates", FormMethod.Post))
                {

                    @Html.AntiForgeryToken()


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <legend><strong> ادخال تقدير </strong></legend>
               




                    //وصف التقدير
                    <div class="form-group row" >

                        <div class="col-md-7">
                            <textarea name="description" class="form-control"></textarea>
                            @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })

                        </div>

                        @Html.Label("وصف التقدير", htmlAttributes: new { @class = "col-md-4 control-label text-md-right",style="float:left"})

                    </div>



                    @* الحدالادني  للتقدير *@
                    <div class="form-group ">

                        <div class="col-md-2">

                            @Html.EditorFor(model => model.Max, new { htmlAttributes = new { @class = "form-control", id = "normal-field" } })
                            @Html.ValidationMessageFor(model => model.Max, "", new { @class = "text-danger" })

                        </div>
                        @Html.Label("الحدالادني  للتقدير ", htmlAttributes: new { @class = "col-md-4 form-control-label text-md-right" })

                    </div>
                    @*الحد الاقصي  للتقدير *@
                    <div class="form-group ">

                        <div class="col-md-2">

                            @Html.EditorFor(model => model.Min, new { htmlAttributes = new { @class = "form-control", id = "normal-field" } })
                            @Html.ValidationMessageFor(model => model.Min, "", new { @class = "text-danger" })

                        </div>
                        @Html.Label("الحد الاقصي  للتقدير ", htmlAttributes: new { @class = "col-md-4 form-control-label text-md-right" })

                    </div>
                    <div style="direction: ltr; margin-top:70px" class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-4 col-md-7">

                                <button type="button" class="btn btn-inverse">الغاء</button>

                                <button type="submit" class="btn btn-primary">حفظ </button>
                            </div>
                        </div>
                    </div>


                }
            </div>
        </section>
    </div>


</div>


