@model WebApplication4.Models.SubjectRate
@using WebApplication4.Dto

@{
    ViewBag.Title = "Create";
    List<SubjectDto> subjects = new List<SubjectDto>();
    subjects = ViewBag.Subjects;
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>SubjectRate</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SubjectId, "SubjectId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <select id="country-select"
                        data-placeholder="اختار الماده"
                        class="selectpicker countrypicker form-control"
                        tabindex="-1"
                        name="SubjectId">
                    @foreach (var item in subjects)
                    {
                        
                        <option value="@item.ID" disabled selected>@item.SubjectName</option>
                    }

                </select>
                @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RateId, "RateId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RateId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RateId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
