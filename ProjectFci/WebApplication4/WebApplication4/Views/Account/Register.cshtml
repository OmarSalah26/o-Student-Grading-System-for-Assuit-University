@model WebApplication4.Models.RegisterViewModel
@using WebApplication4.Logic



@{
    ViewBag.Title = "Log in";

    Layout = null;

}



<!DOCTYPE html>
<html>
<head>
    <title>تسجيل الطلاب</title>


    <link rel="stylesheet" href=@Url.Content("/Content/FrontEnd/css/application.min.css")>


    <link rel="shortcut icon" href="img/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

</head>
<body>









    <div>
        <!-- main page content. the place to put widgets in. usually consists of .row > .col-lg-* > .widget.  -->
        <main id="content" class="content" role="main">






            <h1 class="page-title" style="direction:rtl"> <span class="fw-semi-bold">التسجيل</span></h1>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-1">
                    <section class="widget">
                        <header>

                            <div class="widget-controls">
                                <a data-widgster="expand" title="Expand" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
                                <a data-widgster="collapse" title="Collapse" href="#"><i class="glyphicon glyphicon-chevron-down"></i></a>
                                <a data-widgster="close" title="Close" href="#"><i class="glyphicon glyphicon-remove"></i></a>
                            </div>
                        </header>
                        <div class="widget-body">



                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal form-label-left", novalidate = "novalidate" }))
                            {

                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <fieldset>


                                    <div class="form-group row">
                                        <div class="col-sm-9">

                                            @Html.TextBoxFor(m => m.Id, new { @class = "form-control" })
                                        </div>
                                        @Html.Label("رقم تعريفي", new { @class = "control-label col-sm-3" })
                                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })

                                    </div>



                                    <div class="form-group row">
                                        <div class="col-sm-9">

                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control"})
                                        </div>
                                        @Html.Label("اسم المستخدم", new { @class = "control-label col-sm-3" })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group row">
                                        <div class="col-sm-9">

                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                        </div>
                                        @Html.Label("البريد الالكتروني", new { @class = "control-label col-sm-3" })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group row">
                                        <div class="col-sm-9">

                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control" })
                                        </div>
                                        @Html.Label("رقم التليفون", new { @class = "control-label col-sm-3" })
                                        @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group row">
                                        <div class="col-sm-9">

                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        </div>
                                        @Html.Label("كلمة السر", new { @class = "control-label col-sm-3" })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="form-group row">
                                        <div class="col-sm-9">

                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                        </div>
                                        @Html.Label("تاكيد كلمة ", new { @class = "control-label col-sm-3" })
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })

                                    </div>


                                    <div class="form-group row">
                                        <div class="col-sm-9">
                                            @Html.DropDownList("Roles", null, new { @class = "form-control" })

                                        </div>
                                        @Html.Label("الخاصية التعريفة", new { @class = "control-label col-sm-3" })
                                        @Html.ValidationMessageFor(model => model.Roles, "", new { @class = "text-danger" })

                                    </div>

                                </fieldset>
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-danger btn-rounded pull-xs-right"> تأكيد</button>
                                    @Html.ActionLink("الغاء", "Login", "Account", null, htmlAttributes: new { @class = "btn btn-secondary btn-rounded" })



                                </div>
                            }
                        </div>
                    </section>
                </div>
            </div>

            <!-- The Loader. Is shown when pjax happens -->
            <div class="loader-wrap hiding hide">
                <i class="fa fa-circle-o-notch fa-spin-fast"></i>
            </div>




    </div>
    </main>



    <!-- common libraries. required for every page-->
    <script src=@Url.Content("/Content/FrontEnd/vendor/jquery/dist/jquery.min.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/jquery-pjax/jquery.pjax.js")></script>

    <script src=@Url.Content("/Content/FrontEnd/vendor/tether/dist/js/tether.js")></script>

    <script src=@Url.Content("/Content/FrontEnd/vendor/bootstrap/js/dist/util.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/bootstrap/js/dist/collapse.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/bootstrap/js/dist/dropdown.js")></script>

    <script src=@Url.Content("/Content/FrontEnd/vendor/bootstrap/js/dist/button.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/bootstrap/js/dist/tooltip.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/bootstrap/js/dist/alert.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/slimScroll/jquery.slimscroll.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/widgster/widgster.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/pace.js/pace.js") data-pace-options='{ "target": ".content-wrap", "ghostTime": 1000 }'></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/jquery-touchswipe/jquery.touchSwipe.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/js/bootstrap-fix/button.js")></script>


    <script src=@Url.Content("/Content/FrontEnd/js/settings.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/js/app.js")></script>

    <script id="test" src=@Url.Content("/Content/FrontEnd/vendor/underscore/underscore.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/jquery.sparkline/index.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/jquery.sparkline/index.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/d3/d3.min.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/rickshaw/rickshaw.min.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/raphael/raphael-min.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/jQuery-Mapael/js/jquery.mapael.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/jQuery-Mapael/js/maps/usa_states.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/jQuery-Mapael/js/maps/world_countries.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/bootstrap/js/dist/popover.js")></script>
    <script src=@Url.Content("/Content/FrontEnd/vendor/bootstrap_calendar/bootstrap_calendar/js/bootstrap_calendar.min.js")></script>











</body>
</html>