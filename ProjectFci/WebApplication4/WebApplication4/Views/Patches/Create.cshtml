@model WebApplication4.Models.Patch













<ol class="breadcrumb">
    <li>الرئسية</li>
    <li class="active">الفرقة</li>
</ol>

<!-- Student Form -->
<div class="row">
    <div class="col-lg-8 col-lg-offset-1">
        <section class="widget">
            <header>

                <div class="widget-controls">

                    <a href="#" data-widgster="close"><i class="glyphicon glyphicon-remove"></i></a>
                </div>
            </header>
            <div class="widget-body" style="direction: rtl">


                @using (Html.BeginForm("Create", "Patches", FormMethod.Post))
                {

                    @Html.AntiForgeryToken()


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <legend><strong> ادخال مادة </strong></legend>
                    @* كود  الماده *@
                    <div class="form-group row">

                        <div class="col-md-7">

                            @Html.EditorFor(model => model.PatchNumber, new { htmlAttributes = new { @class = "form-control", id = "normal-field" } })
                            @Html.ValidationMessageFor(model => model.PatchNumber, "", new { @class = "text-danger" })

                        </div>
                        @Html.Label("رقم الفرقة ", htmlAttributes: new { @class = "col-md-4 form-control-label text-md-right" })

                    </div>

                    //اسم الماده
                    <div class="form-group row">

                        <div class="col-md-7">
                            @Html.EditorFor(model => model.PatchName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PatchName, "", new { @class = "text-danger" })

                        </div>

                        @Html.Label("اسم الفرقة", htmlAttributes: new { @class = "col-md-4 control-label text-md-right" })

                    </div>


                

                    <div style="direction: ltr;" class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-4 col-md-7">

                                <button type="button" class="btn btn-inverse">الغاء</button>

                                <button type="submit" class="btn btn-primary">حفظ </button>
                            </div>
                        </div>
                    </div>


                }
            </div>
        </section>
    </div>
   

</div>


