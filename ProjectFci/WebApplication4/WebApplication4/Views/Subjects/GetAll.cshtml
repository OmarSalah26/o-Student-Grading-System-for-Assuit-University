@model IEnumerable<WebApplication4.Dto.SubjectDto>

@{
    ViewBag.Title = "Index";
}


<h1 class="page-title" style="text-align:right " style="direction:rtl">عرض جميع - <span class="fw-semi-bold">المواد</span></h1>






<section class="widget">
    <header>

        <div class="widget-controls">
            <a data-widgster="expand" title="Expand" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
            <a data-widgster="collapse" title="Collapse" href="#"><i class="glyphicon glyphicon-chevron-down"></i></a>
            <a data-widgster="close" title="Close" href="#"><i class="glyphicon glyphicon-remove"></i></a>
        </div>
    </header>
    <div class="widget-body" style="direction:rtl">

        <div class="mt">
            <table id="datatable-table" class="table table-striped table-hover">
                <thead>
                    <tr>
                    
                        <th style="text-align:right">كود الماده</th>
                        <th style="text-align:right" class="no-sort"> اسم الماده </th>
                        <th style="text-align:right" class="no-sort hidden-sm-down">وصف الماده </th>
                   
                        <th style="text-align:right" class="hidden-sm-down">  الفرقة</th>
                        <th style="text-align:right" class="hidden-sm-down"> الترم</th>
                     



                    </tr>
                </thead>
                <tbody>


                    @foreach (var item in Model)
                    {
                        <tr>

                            <td><span class="fw-semi-bold">@item.SubjectCode</span></td>
                            <td class="hidden-sm-down">
                               
                              
                             
                                    <span class="fw-semi-bold">@item.SubjectName</span>
                               
                            </td>
                            <td class="hidden-sm-down">@item.Description </td>
                            <td class="hidden-sm-down">
                                @item.PatchId
                            </td>
                          
                            <td class="width-150">
                                @item.Semester

                            </td>
                       
                        </tr>




                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
