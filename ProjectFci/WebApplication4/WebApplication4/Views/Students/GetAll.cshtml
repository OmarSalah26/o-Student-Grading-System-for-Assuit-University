@model IEnumerable<WebApplication4.Dto.StudentDto>




<!-- main page content. the place to put widgets in. usually consists of .row > .col-lg-* > .widget.  -->

<h1 style="text-align:right" class="page-title">عرض جميع - <span style="text-align:right" class="fw-semi-bold">الطلاب</span></h1>



       


        <section class="widget">
            <header>

                <div class="widget-controls">
                    <a data-widgster="expand" title="Expand" href="#"><i class="glyphicon glyphicon-chevron-up"></i></a>
                    <a data-widgster="collapse" title="Collapse" href="#"><i class="glyphicon glyphicon-chevron-down"></i></a>
                    <a data-widgster="close" title="Close" href="#"><i class="glyphicon glyphicon-remove"></i></a>
                </div>
            </header>
            <div class="widget-body" style="direction:rtl">

                <div class="mt">
                    <table id="datatable-table" class="table table-striped table-hover">
                        <thead>
                            <tr>
                      
                                <th style="text-align:right">رقم الجلوس</th>
                                <th style="text-align:right" class="no-sort"> الرقم الوطني </th>
                                <th style="text-align:right" class="no-sort hidden-sm-down">الاسم</th>
                                <th style="text-align:right" class="hidden-sm-down">الجنسية</th>
                                <th style="text-align:right" class="hidden-sm-down">تاريخ الميلاد</th>
                                <th style="text-align:right" class="hidden-sm-down">رقم الشعبة</th>



                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td class="hidden-sm-down">
                                        
                                        
                                            <span class="fw-semi-bold">@item.SeatingNumber</span>
                                          
                                    </td>
                                    <td class="hidden-sm-down">@item.NationalIdNumber</td>
                                    <td class="hidden-sm-down"> @item.Name</td>
                                    <td class="width-150">

                                        @item.Nationality
                                    </td>
                                    <td class="width-150">
                                        @item.BirthPlace

                                    </td>
                                    <td class="width-150">
                                        @item.SectionID

                                    </td>
                                    @*<td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.SeatingNumber }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.SeatingNumber }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.SeatingNumber })
                                    </td>*@
                                </tr>




                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>

